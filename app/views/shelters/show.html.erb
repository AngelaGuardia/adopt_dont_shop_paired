<h2><%= @shelter.name %></h2>

<ul class="list-group">
  <li class="list-group-item">Address: <%= @shelter.address %></li>
  <li class="list-group-item">City: <%= @shelter.city %></li>
  <li class="list-group-item">State: <%= @shelter.state %></li>
  <li class="list-group-item">Zip: <%= @shelter.zip %></li>
</ul></br>

<div class="button">
  <%= link_to 'All Our Pets', "/shelters/#{@shelter.id}/pets", class: "btn btn-success" %>
  <%= link_to 'Update Shelter', "/shelters/#{@shelter.id}/edit", class: "btn btn-primary" %>
  <%= link_to 'Delete Shelter', "/shelters/#{@shelter.id}", method: :delete, class: "btn btn-danger" %>
</div>

<ul class="list-group">
  <li class="list-group-item"> <%= @shelter.reviews.title %></li>
  <li class="list-group-item">Rating: <%= @shelter.reviews.rating %></li>
  <li class="list-group-item"><%= @shelter.reviews.content %></li>
  <li class="list-group-item"><%= @shelter.reviews.picture %></li>
</ul></br>
