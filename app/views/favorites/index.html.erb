<h1>My Favorite Pets</h1>

<% if @favorite_pets.empty? == true %>
  <p> Uh-oh! You haven't favorited any pets yet... </p>
<% else %>
  <div class="card-columns">
    <% @favorite_pets.each do |pet| %>
    <div class="card">
      <%= image_tag(pet.image, class: "card-img-top")  %>
      <div class="card-body">
        <h3 class="card-title"><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
      </div>
    </div>
    <div class="button">
      <%= link_to 'Remove me from your favorites', "/pets/#{pet.id}", method: :delete, class: "btn btn-danger" %>
    </div>
    <% end %>
  </div>
<% end %>
