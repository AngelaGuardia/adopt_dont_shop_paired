<h2>My Favorite Pets</h2>

<div class="button">
  <%= button_to 'Adopt a Pet Today!', "/applications/new", method: :get, class: "btn btn-success" %>
</div>

<% if session[:favorites] %>
  <div class="card-columns">
    <% @favorite_pets.each do |pet| %>
    <div class="card" id=<%= "pet-#{pet.id}" %>>
      <%= image_tag pet.image, class: "card-img-top" %>
      <div class="card-body">
        <h3 class="card-title"><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
      </div>
      <div class="button">
        <%= link_to 'Remove me from your favorites', "/favorites/#{pet.id}", method: :delete, class: "btn btn-outline-info" %>
      </div>
    </div>
    <% end %>
  </div> <br>

  <div class="button">
    <%= button_to 'Remove all', "/favorites", method: :delete, class: "btn btn-danger" %>
  </div> <br>

  <ul class="list-group">
    <h4> Pets you have applied for adoption: </h4>
    <% @favorite_pets.each do |pet| %>
      <li class="list-group-item pets-with-applications-item">
        <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
      </li>
    <% end %>
  </ul></br>
<% end %>
