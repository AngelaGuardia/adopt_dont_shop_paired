<h2 class="card=title">New Review</h2>

<%= form_tag "/shelters/#{@shelter_id}/reviews", class: "form-group" do %>
  <%= label_tag "Title:" %><br/>
  <%= text_field_tag :title, nil, class: "form-control" %><br/>

  <%= label_tag "Rating:" %><br/>
  <% 5.times do |i| %>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="rating" id=<%="inlineRadio#{i+1}"%>  value=<%=i+1%>>
      <label class="form-check-label" for="inlineRadio1"><%= i+1 %></label>
    </div>
  <% end %></br>

  <%= label_tag "Content:" %><br/>
  <%= text_field_tag :content, nil, class: "form-control" %><br/>

  <%= label_tag "Picture" %><br/>
  <%= text_field_tag :picture, nil, class: "form-control" %><br/>

  <div class="button">
    <%= submit_tag 'Post Review', class: "btn btn-primary" %>
  </div>
<% end %>
